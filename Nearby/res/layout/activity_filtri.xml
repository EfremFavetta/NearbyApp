    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distanza" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtDistanza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="5Km" />

            <SeekBar
                android:id="@+id/seek_bar_distanza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="6" />

        </LinearLayout>
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria" />

        <Spinner
            android:id="@+id/spinnerCategorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sottocategoria" />

        <Spinner
            android:id="@+id/spinnerSottocategorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipologia" />
        
		<RadioGroup
	        android:id="@+id/rdoTipologia"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

			<RadioButton
			    android:id="@+id/rbAC"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:tag="AC"
			    android:text="AttivitÃ  commerciali" />

			<RadioButton
			    android:id="@+id/rbPOI"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:tag="POI"
			    android:text="Punti d'interesse" />            
        </RadioGroup>

		<Button
		    android:id="@+id/btnCerca"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Cerca" />
        
    </LinearLayout>

</RelativeLayout>
